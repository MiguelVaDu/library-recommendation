---
import "@/styles/global.css";

const { title = "Recomendador de Libros", showHeader = true } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    {showHeader && (
      <header class="border-b border-gray-200 dark:border-gray-800 bg-white/60 dark:bg-gray-950/60 backdrop-blur">
        <div class="container py-3 flex items-center justify-between">
          <a href="/" class="flex items-center gap-2">
            <img src="/LogoLib.png" alt="BookMatch" class="h-7 w-auto" />
            <span class="font-semibold">BookMatch</span>
          </a>
          <nav class="text-sm">
            <a href="/" class="hover:underline">Inicio</a>
          </nav>
        </div>
      </header>
    )}

    <main class="container py-8">
      <slot />
    </main>

    
  </body>
</html>
