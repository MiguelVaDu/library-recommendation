---
import BaseLayout from "@/layouts/BaseLayout.astro";
---
<BaseLayout title="Inicio — Recomendador de Libros" showHeader={false}>
  {}
  <video
    class="bg-video"
    autoplay
    muted
    loop
    playsinline
    preload="auto"
    poster="/images/poster.jpg"
    aria-hidden="true"
  >
    <source src="/Book.mp4" type="video/mp4" />
    {}
  </video>
  <div class="bg-video-overlay"></div>

  {}
  <section class="py-24 md:py-32 text-center text-white">
    <div class="max-w-7xl mx-auto">
      <img 
        src="/LogoLib.png" 
        alt="Librería" 
        class="hero-logo w-auto mx-auto mb-6 drop-shadow" 
      />
      <h1 class="hero-title text-4xl md:text-5xl">
        El libro que buscas, te está esperando
      </h1>
      <p class="hero-subtitle mt-4 text-white/85 text-balance">
        Descubre lecturas que encajan con tu mood y estilo.
      </p>
      <div class="mt-8">
        <a
          href="/recommendation/sistemform"
          class="hero-cta inline-flex items-center gap-2"
        >
          Continuar
          <span aria-hidden>→</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
